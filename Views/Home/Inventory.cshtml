@{
    ViewData["Title"] = "Inventory";
}

<div class="container-fluid">
    <!-- Page Title -->
    <div class="row">
        <div class="col-12">
            <h1 class="page-title">@ViewData["Title"]</h1>
            <p>Manage your product inventory here.</p>
        </div>
    </div>


    <div class="d-flex justify-content-end flex-wrap gap-2 mt-3 mb-4">
        <!-- Search bar -->
        <div class="input-group" style="max-width: 300px;">
            <input type="text" class="form-control" placeholder="Search products..." />
        </div>

        <!-- Add Product Button -->
        <button class="btn btn-success">
            <i class="fas fa-plus-circle mr-1"></i> Add Product
        </button>

        <!-- Filter Button -->
        <button class="btn btn-secondary">
            <i class="fas fa-filter mr-1"></i> Filter
        </button>
    </div>



    <!-- Inventory Table -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>Bakery ID</th>
                            <th>Employee ID</th>
                            <th>Image</th>
                            <th>Product ID</th>
                            <th>Product Name</th>
                            <th>Creation Date</th>
                            <th>Threshold</th>
                            <th>Expiration Date</th>
                            <th>Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var product in Model)
                            {
                                <tr class="@(product.IsWarning ? "table-danger" : "")">
                                    <td>@product.BakeryID</td>
                                    <td>@product.EmployeeID</td>
                                    <td>
                                        <img src="@product.ImageUrl" alt="@product.ProductName"
                                             class="img-thumbnail" style="width: 50px; height: auto;" />
                                    </td>
                                    <td>@product.ProductID</td>
                                    <td>@product.ProductName</td>
                                    <td>@product.CreationDate.ToString("MM/dd/yy")</td>
                                    <td>@product.ThresholdDate.ToString("MM/dd/yy")</td>
                                    <td>@product.ExpirationDate.ToString("MM/dd/yy")</td>
                                    <td>@product.Quantity</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center">No inventory records found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination Section -->
    <div class="row align-items-center mt-3 mb-5">
        <div class="col-md-4">
            <span>Showing 1 to 10 of 40 records</span>
        </div>
        <div class="col-md-2">
            <select class="form-control form-control-sm">
                <option>10</option>
                <option>20</option>
                <option>50</option>
            </select>
        </div>
        <div class="col-md-6 text-md-right mt-3 mt-md-0">
            <nav aria-label="Inventory page navigation">
                <ul class="pagination justify-content-end mb-0">
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Previous</a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">4</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/inventory.js"></script>
}
