<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - App_Dev_Activity2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/App_Dev_Activity2.styles.css" asp-append-version="true" />
</head>
<body>

    <!-- Header -->
    <header class="bg-light border-bottom p-3">
        <h4 class="mb-0">App_Dev_Activity2</h4>
    </header>

    <!-- Page layout: Sidebar + Main content -->
    <div class="d-flex" style="min-height: calc(100vh - 136px);"> <!-- 100vh minus header/footer height -->
        <!-- Sidebar -->
        <div class="d-flex flex-column justify-content-between bg-light border-end p-3" style="width: 250px;">
            <div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Inventory">Inventory</a>
                    </li>
                </ul>
            </div>

            <!-- Log Out Button -->
            <div>
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-outline-danger w-100">Log Out</button>
                </form>
            </div>
        </div>

        <!-- Main content area -->
        <main class="flex-grow-1 p-4">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-light border-top text-muted text-corner p-3">
        &copy; 2025 - App_Dev_Activity2
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
