@{
    var isLoggedIn = Context.Session.GetString("IsLoggedIn") == "true";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - App_Dev_Activity2</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/App_Dev_Activity2.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <span class="navbar-brand mb-0 h1">App_Dev_Activity2</span>
            </div>
        </nav>
    </header>

    @if (isLoggedIn)
    {
        <!-- Layout with Sidebar (for logged-in users) -->
        <div class="d-flex" style="min-height: calc(100vh - 136px);">
            <!-- Sidebar -->
            <div class="d-flex flex-column justify-content-between bg-light border-end p-3" style="width: 250px;">
                <div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Inventory">Inventory</a>
                        </li>
                    </ul>
                </div>
                <div>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-outline-danger w-100">Log Out</button>
                    </form>
                </div>
            </div>

            <!-- Main content -->
            <main class="flex-grow-1 p-4">
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        <!-- Layout for non-logged-in pages -->
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }

    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            &copy; 2025 - App_Dev_Activity2
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
